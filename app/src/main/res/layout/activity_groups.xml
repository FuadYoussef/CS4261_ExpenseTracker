<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GroupsActivity">


    <Button
        android:id="@+id/create_new_group_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToCreateScreen"
        android:text="@string/create_or_join_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/main_list_view"
        app:layout_constraintTop_toBottomOf="@id/create_new_group_screen_button"
        app:layout_constraintVertical_bias="0.134"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>